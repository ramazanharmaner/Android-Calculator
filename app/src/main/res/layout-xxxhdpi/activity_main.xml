<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/eskiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="viewEnd" />

    <EditText
        android:id="@+id/sayiGoster"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="110dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        android:text="0"
        android:textSize="30dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAC"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnSilTik"
                android:text="AC"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnArtiEksi"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnSayiTik"
                android:text="+/-"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnYuzde"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnYuzdeTik"
                android:text="%"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnBol"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnOpTik"
                android:text="/"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnSayiTik"
                android:text="7"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnSayiTik"
                android:text="8"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnSayiTik"
                android:text="9"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnCarp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnOpTik"
                android:text="X"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnSayiTik"
                android:text="4"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnSayiTik"
                android:text="5"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnSayiTik"
                android:text="6"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnCikar"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnOpTik"
                android:text="-"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnSayiTik"
                android:text="1"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnSayiTik"
                android:text="2"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnSayiTik"
                android:text="3"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnTopla"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:text="+"
                android:textSize="25dp"
                android:onClick="btnOpTik" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn0"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:text="0"
                android:textSize="25dp"
                android:onClick="btnSayiTik" />

            <Button
                android:id="@+id/btnInfo"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:text="INFO"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnVirgul"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnSayiTik"
                android:text="."
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnEsittir"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarrlik"
                android:onClick="btnEsittirTik"
                android:text="="
                android:textSize="25dp" />

        </TableRow>

    </TableLayout>
</LinearLayout>